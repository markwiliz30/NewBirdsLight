<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14BED1"
    tools:context=".TestFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/lblProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select program"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#39405A" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/tglPgm1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_model"
            android:textColor="#14BED1"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/tglPgm2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_model"
            android:textColor="#14BED1"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/tglPgm3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_model"
            android:textColor="#14BED1"
            android:textSize="15dp"/>

    </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pan: "
                    android:textSize="25sp"
                    android:textColor="#39405A"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/update_test_pan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="#39405A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="°"
                    android:textSize="25sp"
                    android:textColor="#39405A"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />


            </LinearLayout>



            <SeekBar
                android:id="@+id/test_pan_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:progress="128"
                android:max="255"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tilt: "
                    android:textSize="25sp"
                    android:textColor="#39405A"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/update_test_tilt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28dp"
                    android:textColor="#39405A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="°"
                    android:textSize="25sp"
                    android:textColor="#39405A"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />


            </LinearLayout>


            <SeekBar
                android:id="@+id/test_tilt_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:progress="128"
                android:max="255"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blink: "
                    android:textSize="25dp"
                    android:textColor="#39405A"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/update_test_blink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="255"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="#39405A"
                    />


            </LinearLayout>



            <SeekBar
                android:id="@+id/test_blink_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:max="255"/>


    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_model"
        android:text="Reset"
        android:textColor="#14BED1"
        android:textSize="20dp"

        />

        </LinearLayout>
</ScrollView>
</LinearLayout>