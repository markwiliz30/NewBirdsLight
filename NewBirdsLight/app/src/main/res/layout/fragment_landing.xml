<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14BED1"
    tools:context=".LandingFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblProgramList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanned Devices"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textColor="#39405A"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lst_wifi"
        android:layout_width="match_parent"
        android:layout_height="400dp">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/button_model"
        android:drawableRight="@drawable/ic_cached_light_blue_24dp"
        android:textColor="@color/MainColor"
        android:paddingHorizontal="30dp"
        android:text="Refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>